{
  "manifest_version": 3,
  "name": "UCLA Dining Nutrition Tracker",
  "version": "1.0",
  "description": "A Chrome extension for tracking nutritional data from the UCLA dining menu.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://dining.ucla.edu/*"],
      "js": ["src/content_script.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}